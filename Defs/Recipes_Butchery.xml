<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>ButcherCorpseHumanFlesh</defName>
    <label>butcher human</label>
    <description>Butcher a human to obtain thier meat, leather, and other body products.</description>
    <workerCounterClass>ButcherCounters.RecipeWorkerCounter_ButcherHumans</workerCounterClass>
    <jobString>Butchering.</jobString>
    <workAmount>450</workAmount>
    <workSpeedStat>ButcheryFleshSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <efficiencyStat>ButcheryFleshEfficiency</efficiencyStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <interruptIfIngredientIsRotting>true</interruptIfIngredientIsRotting>
    <uiIconThing>Meat_Human</uiIconThing>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <specialProducts>
      <li>Butchery</li>
    </specialProducts>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesHumanlike</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>CorpsesHumanlike</li>
      </categories>
    </defaultIngredientFilter>
  </RecipeDef>

  <RecipeDef>
    <defName>ButcherCorpseInsectFlesh</defName>
    <label>butcher insect</label>
    <description>Butcher an insect to obtain its meat, leather, and other body products.</description>
    <workerCounterClass>ButcherCounters.RecipeWorkerCounter_ButcherInsects</workerCounterClass>
    <jobString>Butchering.</jobString>
    <workAmount>450</workAmount>
    <workSpeedStat>ButcheryFleshSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <efficiencyStat>ButcheryFleshEfficiency</efficiencyStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <interruptIfIngredientIsRotting>true</interruptIfIngredientIsRotting>
    <uiIconThing>Meat_Megaspider</uiIconThing>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <specialProducts>
      <li>Butchery</li>
    </specialProducts>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesInsect</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>CorpsesInsect</li>
      </categories>
    </defaultIngredientFilter>
  </RecipeDef>
  
</Defs>